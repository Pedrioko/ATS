<!-- ZK will load this file
    (classpath/metainfo/zk/lang-addon.xml) automatically -->

<language-addon>
    <!-- addon name,
        required, it's better to be unique -->
    <addon-name>custom</addon-name>
    <!-- specifies the name of a language definition
        should be unique in a language definition,
        xul/html is predefinied language in ZK
        so can be used in lang-addon directly -->
    <language-name>xul/html</language-name>
    <stylesheet href="~./css/clock.css" type="text/css"/>
    <stylesheet href="~./css/toastr.css" type="text/css"/>
    <stylesheet href="~./css/fonts.css" type="text/css"/>
    <stylesheet href="~./zul/less/index.css" type="text/css"/>
    <stylesheet href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" type="text/css"/>

    <javascript src="https://code.jquery.com/jquery-3.3.1.slim.min.js"/>
    <javascript src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"/>
    <javascript src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" />
    <javascript src="~./js/jscolor.js"/>

    <javascript src="~./js/jquery.simpleWeather.min.js"/>
    <javascript src="~./js/toastr.js"/>
    <javascript src="~./js/fontawesome.js"/>
    <javascript src="~./js/slider.js"/>

    <javascript src="~./js/Chart.js"/>
    <javascript src="~./js/Chart.min.js"/>
    <javascript src="~./js/chartjs-plugin-datalabels.min.js"/>

    <javascript src="~./js/jspdf.min.js"/>
    <javascript src="~./js/jspdf.plugin.autotable.js"/>
    <javascript src="~./js/html2canvas.js"/>

    <javascript src="~./js/addons.js"/>


    <!-- define a component -->
    <component>
        <component-name>menupages</component-name>
        <component-class>com.gitlab.pedrioko.core.view.navegation.MenuPages</component-class>
        <widget-class>zul.box.Vlayout</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/layout.js</mold-uri>
            <css-uri>css/layout.css.dsp</css-uri>
        </mold>
    </component>
    <component>
        <component-name>crudview</component-name>
        <component-class>com.gitlab.pedrioko.core.view.viewers.crud.CrudView</component-class>
        <extends>tabpanel</extends>

    </component>
    <component>
        <component-name>navfilters</component-name>
        <component-class>com.gitlab.pedrioko.core.view.navegation.NavegationFilters</component-class>
        <extends>vlayout</extends>
    </component>
    <component>
        <component-name>chart</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Chart</component-class>
        <extends>canvas</extends>

    </component>

    <component>
        <component-name>colorchooserbox</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.ColorChooserBox</component-class>
        <extends>textbox</extends>
    </component>

    <component>
        <component-name>canvas</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Canvas</component-class>
        <widget-class>zkforge.canvas.Canvas</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/canvas.js</mold-uri>
            <css-uri>css/canvas.css.dsp</css-uri>
        </mold>
    </component>
    <component>
        <component-name>gallery</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Gallery</component-class>
        <widget-class>zk.gallery.Gallery</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/Gallery.js</mold-uri>
            <css-uri>css/gallery.css.dsp</css-uri>
        </mold>
    </component>
    <component>
        <component-name>carousel</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Carousel</component-class>
        <widget-class>zk.carousel.Carousel</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/Carousel.js</mold-uri>
            <css-uri>css/carousel.css</css-uri>
        </mold>
    </component>
    <component>
        <component-name>progresstask</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.ProgressTask</component-class>
        <widget-class>zk.progresstask.ProgressTask</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/ProgressTask.js</mold-uri>
            <css-uri>css/progresstask.css</css-uri>
        </mold>
    </component>
    <component>
        <component-name>video</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Video</component-class>
        <widget-class>zk.video.Video</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/video.js</mold-uri>
            <css-uri>css/video.css.dsp</css-uri>
        </mold>
    </component>
    <component>
        <component-name>clock</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.widgets.Clock</component-class>
        <widget-class>zul.wgt.Div</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/div.js</mold-uri>
        </mold>
        <preserve-blank/>
    </component>
    <component>
        <component-name>pointgmap</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.PointGmap</component-class>
        <widget-class>gmaps.Gmaps</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <css-uri>css/gmaps.css.dsp</css-uri>
        </mold>
        <annotation>
            <annotation-name>ZKBIND</annotation-name>
            <property-name>value</property-name>
            <attribute>
                <attribute-name>ACCESS</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
        </annotation>
    </component>
    <component>
        <component-name>contenttab</component-name>
        <component-class>com.gitlab.pedrioko.core.view.navegation.ContentTab</component-class>
        <widget-class>zul.wgt.Div</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/div.js</mold-uri>
        </mold>
        <preserve-blank/>
    </component>
    <component>
        <component-name>firebase</component-name>
        <component-class>com.gitlab.pedrioko.core.view.viewers.FireBase</component-class>
        <widget-class>zul.wnd.Window</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/window.js</mold-uri>
            <css-uri>css/window.css.dsp</css-uri>
        </mold>
        <preserve-blank/>
    </component>
    <component>
        <component-name>valuewindow</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Window</component-class>
        <widget-class>zul.wgt.Div</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/div.js</mold-uri>
        </mold>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>value</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
    </component>
    <component>
        <component-name>renglon</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.Renglon</component-class>
        <widget-class>zul.wgt.Div</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/div.js</mold-uri>
        </mold>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>label</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>input</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
    </component>
    <component>
        <component-name>renglonview</component-name>
        <component-class>com.gitlab.pedrioko.core.zk.component.RenglonView</component-class>
        <widget-class>zul.wgt.Div</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/div.js</mold-uri>
        </mold>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>label</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>view</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
        <annotation>
            <annotation-name>default-bind</annotation-name>
            <property-name>aclass</property-name>
            <attribute>
                <attribute-name>access</attribute-name>
                <attribute-value>both</attribute-value>
            </attribute>
            <attribute>
                <attribute-name>save-when</attribute-name>
                <attribute-value>self.onChange</attribute-value>
            </attribute>
        </annotation>
    </component>
</language-addon>