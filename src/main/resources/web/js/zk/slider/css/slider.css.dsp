
    .slider {
      width: 100%;
      height: 100%;
      max-height: 700px;
      background-color: #fff;
      margin: 50px auto;
      position: relative;
      min-height: 450px;
    }

    .slides-wrapper li,
    .slides-wrapper,
    .ul-slides li {
      display: table;
      background-color: #fff;
      height: 100% !important;
      margin-block-start: 0em;
      margin-block-end: 0em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      padding-inline-start: 0px;
    }

    .ul-slides {
      display: table;
      background-color: #fff;
      top: 0px;
      left: 0px;
      margin-block-start: 0em;
      margin-block-end: 0em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      padding-inline-start: 0px;
    }

    .ul-slides li {
      width: 100%;
    }

    .slider-nav {
      color: white;
      background-color: rgba(0, 0, 0, 0.5);
      margin-block-start: 0em;
      margin-block-end: 0em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      padding-inline-start: 0px;
    }

    .slides-wrapper li span,
    .ul-slides li {
      display: table-cell;
      vertical-align: middle;
      text-align: center;
      font-size: 2em;
      margin-top: 50%
    }

    .slides-wrapper li.grey {
      background-color: #999999;
    }

    .slider-nav {
      position: absolute;
      bottom: 0;
      width: 100%;
      text-align: center;
    }

    .slider-nav li {
      display: inline-block;
      font-size: 2em;
      padding: 10px;
      cursor: pointer;
    }